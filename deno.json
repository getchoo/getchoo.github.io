{
	"imports": {
		"lume/": "https://deno.land/x/lume@v2.2.4/"
	},
	"tasks": {
		"lume": "echo \"import 'lume/cli.ts'\" | deno run --allow-net --allow-read=./ --allow-write=./_site,./dist --allow-sys -",
		"build": "deno task lume",
		"serve": "deno task lume -s"
	},
	"fmt": {
		"useTabs": true
	},
	"compilerOptions": {
		"types": [
			"lume/types.ts"
		]
	}
}
